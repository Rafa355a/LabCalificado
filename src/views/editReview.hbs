<!-- src/views/editReview.hbs -->
<h1>Editar Reseña</h1>
<form action="/resenas/update" method="POST">
    <input type="hidden" name="id" value="{{review.id}}">
    <div class="form-group">
        <label for="reviewerName">Nombre del Reseñador:</label>
        <input type="text" class="form-control" id="reviewerName" name="reviewerName" value="{{review.reviewer_name}}" required>
    </div>
    <div class="form-group">
        <label for="productName">Nombre del Producto:</label>
        <input type="text" class="form-control" id="productName" name="productName" value="{{review.product_name}}" required>
    </div>
    <div class="form-group">
        <label for="rating">Calificación:</label>
        <input type="number" class="form-control" id="rating" name="rating" value="{{review.rating}}" min="1" max="5" required>
    </div>
    <div class="form-group">
        <label for="reviewText">Texto de la Reseña:</label>
        <textarea class="form-control" id="reviewText" name="reviewText" rows="3" required>{{review.review_text}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar Reseña</button>
</form>
